#!/bin/bash

# Get the C file name from the variable
CFILE="$1"

# Check if the C file name is provided
if [ -z "$CFILE" ]; then
  echo "Usage: $0 <c_file_name>"
  exit 1
fi

# Extract the file name without extension
BASENAME=$(basename "$CFILE" .c)

# Compile the C file without linking
gcc -c "$CFILE" -o "$BASENAME.o"